<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".Activity_Signup">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <android.support.constraint.Guideline
            android:id="@+id/guideline_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="24dp" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="24dp" />

        <!-- 로고 -->
        <ImageView
            android:id="@+id/ic_logo"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:src="@drawable/title"
            app:layout_constraintStart_toStartOf="@+id/guideline_left"
            app:layout_constraintTop_toTopOf="parent" />

        <!--제목 테두리-->
        <ImageView
            android:id="@+id/sign_up_bg"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="58dp"
            android:src="@drawable/frame"
            app:layout_constraintEnd_toStartOf="@+id/guideline_right"
            app:layout_constraintStart_toStartOf="@+id/guideline_left"
            app:layout_constraintTop_toTopOf="parent" />

        <!--Sign up text-->
        <TextView
            android:id="@+id/Sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            android:textColor="@color/white"
            android:text="회원가입"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/guideline_right"
            app:layout_constraintStart_toStartOf="@+id/guideline_left"
            app:layout_constraintTop_toTopOf="parent" />

        <!--이메일 체크 버튼-->
        <Button
            android:id="@+id/btn_check"
            android:layout_width="117dp"
            android:layout_height="30dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/btn_bg"
            android:text="인증코드 발송"
            app:layout_constraintBottom_toTopOf="@+id/user_email"
            app:layout_constraintEnd_toStartOf="@id/guideline_right" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/white"
            android:text="E-mail"
            android:textAlignment="textStart"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/user_email"
            app:layout_constraintEnd_toEndOf="@+id/btn_check"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/guideline_left" />

        <EditText
            android:id="@+id/user_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:background="@drawable/rounded_white"
            android:ems="10"
            android:hint="이메일"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            app:layout_constraintEnd_toStartOf="@id/guideline_right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/guideline_left"
            app:layout_constraintTop_toBottomOf="@+id/sign_up_bg" />

        <!--이메일 입력창-->
        <EditText
            android:id="@+id/Email_authenticode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_white"
            android:ems="10"
            android:hint="이메일 인증코드"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            app:layout_constraintEnd_toStartOf="@id/guideline_right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/guideline_left"
            app:layout_constraintTop_toBottomOf="@+id/email2" />

        <TextView
            android:id="@+id/email2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:text="E-mail Authenticode"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/Email_authenticode"
            app:layout_constraintEnd_toStartOf="@+id/guideline_right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline_left"
            app:layout_constraintTop_toBottomOf="@+id/user_email" />

        <Button
            android:id="@+id/btn_authenticode"
            android:layout_width="88dp"
            android:layout_height="30dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/btn_bg"
            android:text="코드 확인"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/Email_authenticode"
            app:layout_constraintEnd_toStartOf="@+id/guideline_right" />

        <!--비번 안내창-->
        <TextView
            android:id="@+id/signin_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:text="Password"
            android:textAlignment="textStart"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/guideline_right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/guideline_left"
            app:layout_constraintTop_toBottomOf="@+id/Email_authenticode" />

        <!--비번 입력창-->
        <EditText
            android:id="@+id/user_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_white"
            android:ems="10"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:padding="12dp"
            app:layout_constraintEnd_toStartOf="@id/guideline_right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/guideline_left"
            app:layout_constraintTop_toBottomOf="@+id/signin_password" />

        <!--비번 재 확인창-->
        <TextView
            android:id="@+id/reconfirm_pw_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:text="Reconfirm Password"
            android:textColor="@color/white"
            android:textAlignment="textStart"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/guideline_right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/guideline_left"
            app:layout_constraintTop_toBottomOf="@+id/user_password" />

        <!--비번 재확인 창-->
        <EditText
            android:id="@+id/reconfirm_pw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_white"
            android:ems="10"
            android:hint="비밀번호 재입력"
            android:inputType="textPassword"
            android:padding="12dp"
            app:layout_constraintEnd_toStartOf="@id/guideline_right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/guideline_left"
            app:layout_constraintTop_toBottomOf="@+id/reconfirm_pw_text" />

        <!--이름 안내 창-->
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:text="Name"
            android:textAlignment="textStart"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/guideline_right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/guideline_left"
            app:layout_constraintTop_toBottomOf="@+id/reconfirm_pw" />

        <!--이름 입력 창-->
        <EditText
            android:id="@+id/signup_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_white"
            android:ems="10"
            android:hint="이름"
            android:inputType="textPersonName"
            android:padding="12dp"
            app:layout_constraintEnd_toStartOf="@id/guideline_right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/guideline_left"
            app:layout_constraintTop_toBottomOf="@+id/name" />

        <!--회원가입 완료 버튼-->
        <Button
            android:id="@+id/Complete"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/ctframe_button"
            android:text="환영합니다"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline_right"
            app:layout_constraintStart_toStartOf="@id/guideline_left"
            app:layout_constraintTop_toBottomOf="@+id/signup_name" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>